<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_vertical" >

    <ImageView
        android:id="@+id/menus_dish_image"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:paddingLeft="10dp" />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_vertical" >

        <TextView
            android:id="@+id/menus_dish_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp"
            android:paddingBottom="10dp"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/menus_dish_price"
            android:layout_below="@id/menus_dish_name"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:paddingLeft="14dp"
            android:text="@string/menus_price"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/menus_count"
            android:layout_toRightOf="@id/menus_dish_price"
            android:layout_below="@id/menus_dish_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp"
            android:text="@string/menus_copy"
            android:textSize="12sp" />

    </RelativeLayout>

</LinearLayout>
