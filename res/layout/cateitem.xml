<?xml version="1.0" encoding="utf-8"?>
<LinearLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageView 
        android:id="@+id/mDishImage" 
        android:layout_width="120dp"
        android:layout_height="120dp"/>
    <TextView 
        android:text="" 
        android:id="@+id/mDishName" 
        android:layout_width="wrap_content" 
        android:layout_height="wrap_content"
        android:layout_below="@+id/mDishImage"
        android:paddingLeft="60px"
        android:gravity="center"/>
    <TextView 
        android:text="" 
        android:id="@+id/mDishPrice" 
        android:layout_width="wrap_content" 
        android:layout_height="wrap_content"
        android:layout_below="@+id/mDishName"
        android:paddingLeft="65px"
        android:gravity="center"/>
    
    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/mDishPrice">
        
        <Button android:text=" - "
            android:id="@+id/mDescend"
            android:layout_width="40sp"
            android:layout_height="40sp"/>
            
        <TextView android:text=""
            android:id="@+id/mCount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"/>
        <Button
            android:text=" + "
            android:id="@+id/mAdd"
            android:layout_width="40sp"
            android:layout_height="40sp"/>
    </LinearLayout>
</LinearLayout>
