<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/mCartTotalLayout"
    android:layout_width="fill_parent"
    android:orientation="vertical"
    android:layout_height="fill_parent"
    android:background="@drawable/order_bg">

    <TextView
        android:text="@string/tablename"
        android:id="@+id/mOrderTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="15sp"/>

    <TextView
        android:id="@+id/mTotalDishCount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/mOrderTitle"/>

    <TextView
        android:text="@string/total"
        android:id="@+id/mTotal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/mTotalDishCount"
        android:textSize="15sp"/>

    <LinearLayout
        android:id="@+id/buttonLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:paddingBottom="60px"
        android:layout_gravity="center">

        <Button
            android:text="@string/check"
            android:id="@+id/mCheck"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="150px"
            android:textSize="15sp"/>

        <Button
            android:text="@string/ok"
            android:id="@+id/mOK"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50px"
            android:textSize="15sp"/>
    </LinearLayout> 

    <GridView
        android:layout_below="@id/mTotal"
        android:layout_above="@id/buttonLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/mCategoryItem"
        android:layout_marginLeft="6dp"
        android:layout_marginRight="6dp"
        android:verticalSpacing="4dp"
        android:columnWidth="120dp"
        android:numColumns="auto_fit"
        android:stretchMode="columnWidth" />

</RelativeLayout>
